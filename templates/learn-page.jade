block vars
  - var pageTitle = "Learn"
  - var description = "Get started with Ampersand.js"
  - var bodyClass = "docs-page"

extends /templates/layout

block content

  .docs.cf
    a.logo.logo-ampersand(href="/")
    nav.nav-docs
      for page in globals.pages
        a.section-top(href= '/learn/' + page.url)= page.meta.pagetitle

    .docs-content
      section!= globals.content
