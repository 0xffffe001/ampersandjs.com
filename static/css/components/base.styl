*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: $font-size-base/$line-height-base $font-family-helvetica
  color: $gray-dark
  background-color: white
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

h1, h2
  line-height: 1.1

h2, h3
  padding-top: 120px
  margin-top: -100px

h3, h4
  line-height: 1.3

h1, h2, h3, h5, h6
  color: black

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4 
  font-size: $font-size-h4

h5
  font-size: $font-size-h5
  text-transform: uppercase
  color: $gray

h6
  font-size: $font-size-h6

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)

small
  font-size: $font-size-small


ul, ol
  margin: 15px 0 15px 20px
  padding: 0

  li ul
    li
      list-style-type: circle 

  li li ul
    li
      list-style-type: square

ul
  li
    list-style-type: disc

  &.unstyled
    margin: 0

    li
      display: inline-block
      list-style-type: none

ol
  li
    list-style-type: decimal


.container
  position: relative

main
  padding: 30px 0 50px 50px
  margin-left: 300px
  max-width: 800px

  section
    padding-bottom: 30px
    margin-bottom: 30px
    border-bottom: 1px solid $gray-lighter

    &:first-of-type
      h2
        margin-top: 0

    &:last-of-type
      border: none
      padding-bottom: 0
      margin-bottom: 0

    p:last-of-type
      margin-bottom: 0

    .image-wrapper
      display: block
      margin: 20px auto

      &:not(.humanjs)
        img
          border: 1px solid $gray-lighter
          border-radius: 3px

@media screen and (max-width: 650px)

  main
    margin-left: 0
    padding: 40px 25px

    h1, h2, h3, code
      word-break: break-all

    h2
      font-size: $font-size-h4

    h1
      font-size: $font-size-h3

  .image-wrapper
    text-align: center

    img
      max-width: 100%
