*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: $font-size-base/$line-height-base $font-family-sentinel
  font-weight: 400
  color: $gray-dark
  background-color: white
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  border: 20px solid $border-color

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

h1, h2, h3, h4
  line-height: 1.3

h1, h2, h3, h4, h5, h6
  font-family: $font-family-gotham-round
  font-weight: $font-weight-semibold
  color: $gray-darker

h1
  font-size: $font-size-h1

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4 
  font-size: $font-size-h4

h5
  font-size: $font-size-h5
  text-transform: uppercase
  color: $gray

h6
  font-size: $font-size-h6

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)

small
  font-size: $font-size-small


ul, ol
  margin: 15px 0 15px 20px
  padding: 0

  li ul
    li
      list-style-type: circle 

  li li ul
    li
      list-style-type: square

ul
  li
    list-style-type: disc

  &.unstyled
    margin: 0

    li
      display: inline-block
      list-style-type: none

ol
  li
    list-style-type: decimal

hr
  width: 100%
  margin-bottom: 70px
  border: none
  border-top: 1px solid $border-color

.logo
  background-repeat: no-repeat
  &.logo-ampersand
    background-image: url(../img/logo-ampersand.png)
    background-image: $logo-ampersand, none
  &.logo-ampersand-gray
    background-image: url(../img/logo-ampersand-gray.png)
    background-image: $logo-ampersand-gray, none
  &.logo-jsforteams
    background-image: url(../img/logo-jsforteams.png)
    background-image: $logo-jsforteams, none
  &.logo-humanjs
    background-image: url(../img/logo-humanjs.png)
    background-image: $logo-humanjs, none

.container
  position: relative

.illustration.temp
  max-width: 600px
  margin: 0 auto 40px
  padding: 100px 20px
  border: 1px dotted $gray-lighter

main
  padding: 30px 0 50px 50px
  margin-left: 300px
  max-width: 800px

  section
    padding-bottom: 30px
    margin-bottom: 30px
    border-bottom: 1px solid $gray-lighter

    &:first-of-type
      h2
        margin-top: 0

    &:last-of-type
      border: none
      padding-bottom: 0
      margin-bottom: 0

    p:last-of-type
      margin-bottom: 0

    .image-wrapper
      display: block
      margin: 20px auto

      &:not(.humanjs)
        img
          border: 1px solid $gray-lighter
          border-radius: 3px

@media screen and (max-width: 650px)

  main
    margin-left: 0
    padding: 40px 25px

    h1, h2, h3, code
      word-break: break-all

    h2
      font-size: $font-size-h4

    h1
      font-size: $font-size-h3

  .image-wrapper
    text-align: center

    img
      max-width: 100%
