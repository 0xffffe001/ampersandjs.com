// Docs

.docs-page, .learn-index

  .footer-main
    max-width: 980px
    margin: 0 auto
    padding-left: 25%
    border-top: none

    .nav-footer
      border-top: 1px solid $border-color
      padding-top: 40px

.docs
  max-width: 1100px
  margin: 0 auto 40px
  padding: 0 60px

  a.back
    display: none

.nav-docs
  width: 20%
  padding-right: 10px

.docs-content
  padding-left: 30%
  min-height: 350px

  .anchor:focus
    outline: none

  section
    padding-bottom: 40px
    margin-bottom: 50px

    &:not(:last-child)
      border-bottom: 1px solid $border-color

  h1, h2, h3
    code
      font-size: 0.6em
      background: none
      font-weight: normal

@media (max-width: 860px)

  .docs
    padding: 0 20px

@media (max-width: 768px)

  .docs-page
    .nav-docs
      display: none

  .docs-content
    padding-left: 0

  .learn-index
    .nav-docs
      width: 100%
      position: static
    .docs-content
      max-width: 500px
      margin: 0 auto
      text-align: center

  .docs-page, .learn-index
    .footer-main
      padding-left: 0
      padding-right: 0

  .docs
    a.back
      margin: -50px 0 50px
      padding-left: 25px
      display: block
      background: no-repeat 0 45%
      background-image: url(../images/icon-arrow-back.png)
      background-image: url(../images/icon-arrow-back.svg), none
      background-size: auto 10px
