// Ampersand contribute page

.contribute

  .container
    max-width: 790px
    margin: 0 auto 70px
    text-align: center

  .contribute-intro

    h2, p, ol, ul, dl, blockquote
      margin-left: auto
      margin-right: auto
      max-width: 500px

  .member
    margin-bottom: 30px
    padding: 0 10px
    float: left

    img
      width: 100%
      margin: 0 auto 10px
      display: block
      border-radius: 4px

  .core-team
    margin: 40px auto
    max-width: 600px

    .member
      width: 33.33%
      &:nth-child(3n+1)
        clear: left

      img
        max-width: 150px

  .contributors-list
    margin: 40px auto

    .member
      width: 14.28%
      display: block
