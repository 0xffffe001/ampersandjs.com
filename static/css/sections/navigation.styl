// Navigation

nav
  position: absolute
  top: 0
  height: 100%
  width: 300px
  padding: 0 40px

  a:not(.button)
    display: block
    text-transform: capitalize
    font-size: $font-size-small

  .h1, .h2
    margin-top: 5px
    font-weight: bold
   
  .h1
    color: black

  .h2
    color: $gray-dark

  a:not(.h1):not(.h2):not(.button)
    color: $gray